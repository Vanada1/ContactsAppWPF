<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:ContactsAppUI">
	<Style x:Key="ControlStyle">
		<Setter Property="Control.Margin" Value="3" />
	</Style>
	<Style x:Key="TextBlockStyle" BasedOn="{StaticResource ControlStyle}">
		<Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
		<Setter Property="TextBlock.VerticalAlignment" Value="Center" />
	</Style>
	<Style x:Key="TextBoxStyle" BasedOn="{StaticResource ControlStyle}">
		<Setter Property="TextBox.VerticalAlignment" Value="Center" />
	</Style>
	<Style x:Key="ButtonStyle" BasedOn="{StaticResource ControlStyle}" />
</ResourceDictionary>