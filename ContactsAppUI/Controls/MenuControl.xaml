<UserControl
    x:Class="ContactsAppUI.Controls.MenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsAppUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu VerticalAlignment="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem x:Name="ExitButton" Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem x:Name="AddButton" Header="Add Contact" />
                <MenuItem x:Name="EditButton" Header="Edit Contact" />
                <MenuItem x:Name="RemoveButton" Header="Remove Contact" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem x:Name="AboutButton" Header="About" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
