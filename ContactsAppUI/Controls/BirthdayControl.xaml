<UserControl
    x:Class="ContactsAppUI.Controls.BirthdayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsAppUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../Dictionaries/StyleDictionary.xaml" />
    </UserControl.Resources>
    <Grid VerticalAlignment="Bottom" Background="LightSkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image
            Grid.Column="0"
            Height="70"
            Source="../Resources/ExclamationMark.png" />
        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Style="{StaticResource ControlStyle}"
            Text="Сегодня день рождения:" />
    </Grid>
</UserControl>
