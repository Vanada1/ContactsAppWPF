<UserControl
    x:Class="ContactsAppUI.Controls.BirthdayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlViewModels="clr-namespace:ViewModel.ControlViewModels;assembly=ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsAppUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance controlViewModels:BirthdayControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Visibility="{Binding Visibility}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../Dictionaries/StyleDictionary.xaml" />
    </UserControl.Resources>
    <Grid VerticalAlignment="Bottom" Background="LightSkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image
            Grid.Column="0"
            Height="70"
            Margin="3"
            Source="../Resources/ExclamationMark.png" />
        <StackPanel
            Grid.Column="1"
            VerticalAlignment="Center"
            Style="{StaticResource ControlStyle}">
            <TextBlock Text="Сегодня день рождение:" />
            <TextBlock Text="{Binding Path=BirthdayNames}" />
        </StackPanel>

    </Grid>
</UserControl>
